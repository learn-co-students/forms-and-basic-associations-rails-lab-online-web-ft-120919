<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :song_genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <%= f.fields_for :notes do |attribute| %>
    <%= attribute.label :content %>
    <%= attribute.text_field :content %>
  <% end %>


  <br />

  <%= f.submit %>
<% end %>