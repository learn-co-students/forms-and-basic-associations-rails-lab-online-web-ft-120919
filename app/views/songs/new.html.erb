<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br><br>

  <%= f.fields_for :notes do |note| %>
    <%= note.label :content %>
    <%= note.text_field :content %>
  <% end %>

  <br>

  <%= f.submit %>
<% end %>


