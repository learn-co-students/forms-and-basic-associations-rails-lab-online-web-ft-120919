<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>
  <div>
    <%= f.label :genre %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>
  <div>
    <%= f.fields_for :notes do |note| %>
      <%= note.label :content, "Note:" %>
      <%= note.text_field :content %>
    <% end %>
  </div>
  <%= f.submit %>
<% end %>


