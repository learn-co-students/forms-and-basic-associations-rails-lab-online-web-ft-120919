<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name, "Artist's Name" %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre, 'Select Genre'%>
  <%= f.select :genre_id, options_from_collection_for_select(@genres, "id", "name"), multiple: true %>

  <h2>Notes</h2>

  <%= f.fields_for :notes do |note_form| %>
    <%= note_form.label :note %>
    <%= note_form.text_area :content, rows: 5, cols: 30 %>
    <br>
  <% end %>

  <%= f.submit %>
<% end %>


