<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
  
  <h2>Notes</h2>
  <%= f.fields_for :notes do |note_form| %>
     <%= note_form.label :note %><br>
     <%= note_form.text_area :content %><br>
  <% end %>

  <%= f.submit %>
<% end %>


